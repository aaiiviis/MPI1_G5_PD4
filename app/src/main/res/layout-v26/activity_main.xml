        app:layout_constraintEnd_toStartOf="@+id/pogasub"
        app:layout_constraintStart_toEndOf="@+id/poga5"
        app:layout_constraintTop_toBottomOf="@+id/poga3" />

    <Button
        android:id="@+id/poga7"
