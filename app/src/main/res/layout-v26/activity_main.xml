        android:text="@string/c"
        android:textColor="@color/colorCipari"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/lauks1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lauks1" />

    <Button
        android:id="@+id/pogadiv"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/pogamul"
        android:layout_alignStart="@+id/pogamul"
        android:layout_alignLeft="@+id/pogamul"
        android:layout_alignEnd="@+id/pogamul"
