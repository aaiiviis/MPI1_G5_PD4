    <Button
        android:id="@+id/poga9"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/poga6"
        android:layout_alignStart="@+id/poga6"
        android:layout_alignLeft="@+id/poga6"
        android:background="@drawable/btn_number"
        android:text="@string/devini"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/poga10"
