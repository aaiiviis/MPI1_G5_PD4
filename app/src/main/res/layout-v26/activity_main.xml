        android:layout_toEndOf="@+id/poga3"
        android:layout_toRightOf="@+id/poga3"
        android:background="@drawable/btn_operations"
        android:text="@string/plus"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/pogasub"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/poga3"
        app:layout_constraintTop_toBottomOf="@+id/lauks1" />

    <Button
        android:id="@+id/pogasub"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/pogaadd"
        android:layout_alignStart="@+id/pogaadd"
        android:layout_alignLeft="@+id/pogaadd"
        android:layout_alignEnd="@+id/pogaadd"
        android:layout_alignRight="@+id/pogaadd"
        android:background="@drawable/btn_operations"
        android:text="@string/minuss"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/pogamul"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/poga6"
        app:layout_constraintTop_toBottomOf="@+id/pogaadd" />

    <Button
        android:id="@+id/pogamul"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/pogasub"
        android:layout_alignStart="@+id/pogasub"
        android:layout_alignLeft="@+id/pogasub"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_operations"
        android:text="@string/reizinat"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/pogadiv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/poga9"
        app:layout_constraintTop_toBottomOf="@+id/pogasub" />

