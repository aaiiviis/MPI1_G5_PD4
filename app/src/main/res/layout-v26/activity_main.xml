        android:layout_below="@+id/poga1"
        android:layout_toStartOf="@+id/poga2"
        android:layout_toLeftOf="@+id/poga2"
        android:background="@drawable/btn_number"
        android:text="@string/cetri"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/poga7"
