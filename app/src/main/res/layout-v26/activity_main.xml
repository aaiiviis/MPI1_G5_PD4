        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/poga8"
        app:layout_constraintEnd_toStartOf="@+id/poga6"
        app:layout_constraintStart_toEndOf="@+id/poga4"
        app:layout_constraintTop_toBottomOf="@+id/poga2" />

    <Button
        android:id="@+id/poga6"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="0dp"
