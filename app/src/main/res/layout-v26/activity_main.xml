        android:text="@string/septini"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/pogaNeg"
        app:layout_constraintEnd_toStartOf="@+id/poga8"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poga4" />

    <Button
        android:id="@+id/poga8"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/poga5"
        android:layout_alignStart="@+id/poga5"
        android:layout_alignLeft="@+id/poga5"
