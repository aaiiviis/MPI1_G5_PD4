        app:layout_constraintTop_toBottomOf="@+id/texthistory" />


    <Button
        android:id="@+id/poga1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/lauks1"
        android:layout_alignEnd="@+id/poga4"
        android:layout_alignRight="@+id/poga4"
        android:layout_marginTop="8dp"
        android:layout_toStartOf="@+id/poga4"
        android:layout_toLeftOf="@+id/poga4"
        android:background="@drawable/btn_number"
        android:text="@string/viens"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/poga4"
        app:layout_constraintEnd_toStartOf="@+id/poga2"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lauks1" />

    <Button
        android:id="@+id/poga2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignTop="@+id/poga1"
